#include <stdio.h>

int main()
{
    int notas=0;
    float Notas_total=0;
    float promedio;
    printf("Ingrese la nota 1: ");
    scanf("%d",&notas);
    Notas_total = Notas_total + notas;
    printf("Ingrese la nota 2: ");
    scanf("%d",&notas);
    Notas_total = Notas_total + notas;
    printf("Ingrese la nota 3: ");
    scanf("%d",&notas);
    Notas_total = Notas_total + notas;
    promedio=Notas_total/3;
    printf("El promedio de sus 3 notas es:%.2f",promedio);
    
}
